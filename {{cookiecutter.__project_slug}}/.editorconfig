root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ads,adb,gpr}]
indent_size = 3

[*.rb]
indent_size = 2

[Rakefile]
indent_size = 2

[*.{tf,hcl}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = unset

[Makefile*]
indent_style = tab
indent_size = unset
