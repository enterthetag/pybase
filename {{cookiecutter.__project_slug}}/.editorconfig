root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ads,adb,gpr}]
indent_size = 3

[*.{rb,pp,tf,hcl,yml,yaml}]
indent_size = 2

[{Rakefile,*.rake}]
indent_size = 2

[*.{json,js,jsx,ts,tsx}]
indent_size = 2

[*.{c,cpp,h,hpp,go}]
indent_style = tab
indent_size = unset

[{Makefile*,*.mk}]
indent_style = tab
indent_size = unset
